{% extends 'base.html.twig' %}

{% block title %}Connexion - setOn{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="text-center" style="max-width: 400px; width: 100%;">

            <!-- Titre de l'application -->
            <h1 class="display-4 mb-4 fw-bold">setOn</h1>

            <!-- Sous-titre -->
            <p class="lead mb-4 fw-bold light-nav-text-color ">Connectez-vous à votre compte</p>

            <!-- Formulaire -->
            <form method="post" class="p-4">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Votre email" autocomplete="email" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mb-3 text-start">
                    <a href="#" class="text-decoration-none">Mot de passe oublié ?</a>
                </div>

                <button class="btn btn-lg w-100" type="submit">
                    Se connecter
                </button>
            </form>

            <!-- Lien vers l'inscription -->
            <div class="mt-3">
                <a href="{{ path('app_register') }}" class="btn w-100">Créer un compte</a>
            </div>
        </div>
    </div>
{% endblock %}